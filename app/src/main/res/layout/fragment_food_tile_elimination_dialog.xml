<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Greek"
        android:id="@+id/opponent_textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Norse"
        android:id="@+id/opponent_textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <GridView
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:id="@+id/opponent_gridView1"
        android:layout_below="@+id/opponent_textView1"
        android:layout_alignParentStart="true" />

    <GridView
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:id="@+id/opponent_gridView2"
        android:layout_alignTop="@+id/opponent_gridView1"
        android:layout_alignParentEnd="true" />
</RelativeLayout>